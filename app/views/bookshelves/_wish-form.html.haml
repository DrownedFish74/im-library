.bookshelvesWishPopup
  = form_with(model:@wish,local: true) do |f|
    .bookshelvesWishPopup__add
    .bookshelvesWishPopup__form
      =f.text_area :comment,placeholder: "メッセージを入力してください",rows: "4",class:"bookshelvesWishPopup__form--textarea"
      =f.hidden_field :status,value:"wait"
      = f.submit value:"OK",class:"formbtn"
  %button{class:"bookshelvesPopup__close formbtn"}やめる
